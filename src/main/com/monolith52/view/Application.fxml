<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.monolith52.view.ApplicationController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="ファイル">
                    <items>
                        <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" text="終了" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <TableView fx:id="tableView" prefHeight="1.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="columnFile" prefWidth="-1.0" text="ファイル名" />
                <TableColumn fx:id="columnOriginalSize" maxWidth="80.0" minWidth="80.0" text="サイズ" />
                <TableColumn fx:id="columnCompressedSize" maxWidth="80.0" minWidth="80.0" text="圧縮後" />
                <TableColumn fx:id="columnProgress" maxWidth="120.0" minWidth="120.0" prefWidth="120.0" text="圧縮率" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <HBox nodeOrientation="RIGHT_TO_LEFT" spacing="5.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="convertButton" mnemonicParsing="false" onAction="#onConvertButtonAction" text="変換" />
                <Pane nodeOrientation="LEFT_TO_RIGHT" HBox.hgrow="ALWAYS">
                    <children>
                        <Label fx:id="messageLabel">
                            <padding>
                                <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                            </padding>
                        </Label>
                    </children>
                </Pane>
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
